<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/content_marginTop"
    android:layout_marginLeft="@dimen/content_marginLeft"
    android:layout_marginRight="@dimen/content_marginRight"
    android:layout_marginBottom="@dimen/content_marginTop">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvJobHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/sample_text_job_header"
            android:fontFamily="sans-serif-medium"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tvCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/sample_text_company"
            android:fontFamily="sans-serif-medium"
            android:layout_below="@id/tvJobHeader"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/tvTimeSpan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/sample_text_time_span"
            android:layout_below="@id/tvCompany"/>

    </RelativeLayout>


</LinearLayout>