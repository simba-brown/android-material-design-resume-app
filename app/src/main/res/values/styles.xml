<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

    </style>

    <style name="CardStyle" parent="CardView.Light">
        <item name="cardElevation">@dimen/cardview_default_elevation</item>
        <item name="cardCornerRadius">@dimen/cardview_corner_radius</item>
        <item name="android:layout_margin">@dimen/cardview_margin</item>
    </style>

    <style name="ListFont" parent="@android:style/Widget.ListView">
        <item name="android:textColor">@color/accent_material_dark</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="AppLogo" parent="AppTheme">
        <item name="android:textColor">@color/accent_material_dark</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/app_title_font_size</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
